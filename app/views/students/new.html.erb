<h1>New Student</h1>

<%= form_for @student, :url => { :action => "create" } do |student_form| %>
  <%= student_form.label :first_name %> <br>
  <%= student_form.text_field :first_name %> <br><br>
  <%= student_form.label :last_name %> <br>
  <%= student_form.text_field :last_name %> <br><br>
  <%= student_form.label :email %> <br>
  <%= student_form.email_field :email %> <br> <br>
  <%= student_form.submit "Create" %>
<% end %>