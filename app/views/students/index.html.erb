<h1>Listing students</h1>
<%= link_to "Add New Student", new_student_path%>
<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><%= link_to "View", student %></td>
            </tr>
        <% end %>
    </tbody>
</table>